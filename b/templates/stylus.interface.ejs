<% if (parent) { -%>
@import "../<%- parent %>/<%- parent %>.interface.styl"

<% } -%>
$<%- blockName.camelize(false) %> = ()
declare($<%- blockName.camelize(false) %>, <%- blockName %>)

if file-exists("<%- blockName %>_*.styl")
	@import "<%- blockName %>_*.styl"

<%- blockName %>($p)
	$p = assign({}, $p)

	+cache()
<% if (parent) { -%>
		extends($<%- parent.camelize(false) %>)
<% } -%>
